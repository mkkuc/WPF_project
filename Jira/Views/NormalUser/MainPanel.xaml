<Window x:Class="Jira.Views.NormalUser.MainPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jira.Views.NormalUser"
        mc:Ignorable="d"
        Title="MainPanel" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Edycja konta">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Content="Imię:" Margin="0,5,5,0" Grid.Row="0" Grid.Column="0"/>
                    <TextBox Name="NameTextBox" MinWidth="180" Margin="0,5,5,0" Grid.Row="0" Grid.Column="1"/>

                    <Label Content="Nazwisko:" Margin="0,5,5,0" Grid.Row="1" Grid.Column="0"/>
                    <TextBox Name="LastnameTextBox" MinWidth="180" Margin="0,5,5,0" Grid.Row="1" Grid.Column="1"/>

                    <Label Content="Numer telefonu:" Margin="0,5,5,0" Grid.Row="2" Grid.Column="0"/>
                    <TextBox Name="PhoneTextBox" MinWidth="180" Margin="0,5,5,0" Grid.Row="2" Grid.Column="1"/>
                </Grid>
            </TabItem>
            <TabItem Header="Lista zadań">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <ListView Grid.Column="0" Name="IssuesListView" Margin="5,5,5,5" SelectionMode="Single" 
                  ItemsSource="{Binding issues}" DisplayMemberPath="IssueName" />

                    <DockPanel Grid.Column="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Label Content="Nazwa" Margin="0,5,5,0" Grid.Row="0" Grid.Column="0"/>
                            <TextBox Name="IssueNameTextBox" MinWidth="180" Margin="0,5,5,0" Grid.Row="0" Grid.Column="1" IsEnabled="False"/>

                            <Label Content="Opis" Margin="0,5,5,0" Grid.Row="1" Grid.Column="0"/>
                            <TextBox Name="IssueDescriptionTextBox" MinWidth="180" Margin="0,5,5,0" Grid.Row="1" Grid.Column="1" IsEnabled="False"/>
                        </Grid>
                    </DockPanel>

                </Grid>
<!--TODO: Bindy między listą a szczegółami-->
            </TabItem>
            <TabItem Header="Lista grup">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Grid.Row="0" Content="Grupy, do których należysz:" Margin="3,3,3,3" />
                    <ListView Grid.Column="0" Grid.Row="1" Name="ParticipatingGroupsListView" Margin="5,5,5,5" SelectionMode="Single" 
                  ItemsSource="{Binding participatingGroups}" DisplayMemberPath="PartGroupName" />
                    
                    <Label Grid.Column="1" Grid.Row="0" Content="Pozostałe grupy:" Margin="3,3,3,3" />
                    <ListView Grid.Column="1" Grid.Row="1" Name="OtherGroupsListView" Margin="5,5,5,5" SelectionMode="Single" 
                  ItemsSource="{Binding otherGroups}" DisplayMemberPath="OtherGroupName" />


                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
