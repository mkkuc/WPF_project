<Window x:Class="Jira.Views.NotLogIn.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jira.Views.NotLogIn"
        mc:Ignorable="d"
        Title="LogIn" Height="450" Width="800">
    <Grid>
        <TextBox Name="LoginTextBox" GotFocus="LoginEnter" LostFocus="LoginLeave" TextAlignment="Center" Foreground="Silver" Height="30" Margin="207,70,207,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top"/>
        <TextBox Name="PasswordTextBox" GotFocus="PasswordEnter" LostFocus="PasswordLeave" TextAlignment="Center" Foreground="Silver" Height="30" Margin="207,143,207,0" TextWrapping="Wrap" Text="Hasło" VerticalAlignment="Top"/>
        <Button Content="Zaloguj się" Height="62" Margin="322,270,322,0" VerticalAlignment="Top" Click="Login"/>
        <PasswordBox Name="PassTextBox" GotFocus="PasswordEnter" LostFocus="PasswordLeave" Height="30" Margin="207,143,207,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
